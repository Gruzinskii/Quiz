{% extends 'admin/panel.html.twig' %}

{% trans_default_domain "translations" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("static/styles/admin/quiz.css?v1.23") }}">
    <link rel="stylesheet" href="{{ asset("static/styles/admin/question.new.css?v1.1") }}">
    <link rel="stylesheet" href="{{ asset("static/styles/jquery-ui.min.css") }}">
{% endblock %}

{% block content %}
    <div class="container content">
        <div class="col col-lg-12 quiz-handler">
            <div class="form-group quiz-creator ">
                <input type="hidden" id="csrf-input" value="{{ csrf_token("intention") }}">
                <h1 class="quiz-name">{{ 'admin.quiz.quiz_label'|trans }} </h1>
                <div class="quiz-header">
                    <input class="form-control quiz-name-input" placeholder="input quiz name">
                    <div class="quiz-errors"></div>
                </div>
                <div class="question-wrapper">
                    <div class="question-handler form-group">
                        <h3>{{ 'admin.quiz.quiz_adding_question'|trans }}</h3>
                        <input class="form-control question-search" placeholder="type question">
                        <div class="errors">
                        </div>
                    </div>
                    <h2 class="question-label">{{ 'admin.quiz.quiz_question_label'|trans }}</h2>
                    <ui class="questions">

                    </ui>
                    <p class="question-info">{{ 'admin.quiz.quiz_quiestion_info_label'|trans }}</p>
                    <div class="question-creator-wrapper">
                        {% include "admin/question_create_form.html.twig" %}
                    </div>
                    <button class="btn btn-large add-question-button">{{ 'admin.quiz.quiz_create_question'|trans }}</button>
                </div>
                <button class="btn btn-large create-quiz-btn">{{ 'admin.quiz.quiz_create_quiz'|trans }}Create quiz</button>
            </div>
        </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset("static/scripts/jquery.newquestion.js?v1.81") }}"></script>
    <script src="{{ asset("static/scripts/jquery-ui.min.js") }}"></script>
    <script src="{{ asset("static/scripts/admin/quiz.js?v1.77") }}"></script>
{% endblock %}



