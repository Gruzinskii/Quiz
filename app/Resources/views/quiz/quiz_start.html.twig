{% extends 'base.html.twig' %}

{% block title %}
    Start Quiz
{% endblock %}

{% trans_default_domain "translations" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("static/styles/quiz/quiz.start.css?v1.0") }}">
{% endblock %}

{% block body %}
    <main>
        <div class="container">
            <div class="col-4 quiz-start bg-color text-color">
                <h2>{{ quiz.name }}</h2>
                <p>{{ "homepage.questions"|trans }}{{ quiz.countOfQuestions }}</p>
                <p>{{ "homepage.players"|trans }}{{ quiz.countOfPlayers }}</p>
                {% if quiz.leader %}
                    <p>{{ "homepage.leader"|trans }}{{ quiz.leader }}</p>
                {% else %}
                    <p>{{ "homepage.leader_none"|trans }}</p>
                {% endif %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
{% endblock %}