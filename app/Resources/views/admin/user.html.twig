{% extends 'admin/panel.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("static/styles/admin/user.css") }}">
{% endblock %}

{% block content %}
    <nav class="user-header bg-color">
        <nav class="navbar navbar-light justify-content-between user-header">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </nav>
        <div class="container-fluid user-indent">
            <div class="col col-lg-12 user-creator user-header">
                <table class="table table-inverse">
                    <tbody>
                        <tr>
                            <th>User name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <td></td>
                        </tr>
                        {% for user in pagination %}
                            <tr>
                                <td scope="row">{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td> user.role </td>
                                {% if user.enabled == true %}
                                    <td><button type="button" class="btn btn-outline-danger button-size">Block</button></td>
                                {% else %}
                                    <td><button type="button" class="btn btn-outline-success button-size">Unblock</button></td>
                                {% endif %}
                            </tr>
                        {% endfor%}
                    </tbody>
                </table>
            </div>
            <div class="navbar" >
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </nav>
{% endblock %}