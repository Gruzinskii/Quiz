<form class="filter-form" method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">

    <select class="pull-left form-control select" name="{{ filterFieldName }}">
        {% for field, label in fields %}
            <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>

    <input class="pull-right filter-input form-control" type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />

    <button class="btn btn-success">{{ options.button }}</button>

</form>
